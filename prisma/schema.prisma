generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// enums
enum JobStatus {
  pending
  interview
  declined
}

enum JobType {
  full_time
  part_time
  remote
  internship
}

// models
model User {
  id        String   @id @default(cuid())
  name      String
  lastName  String?
  email     String  @unique
  password  String
  location  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  jobs      Job[]
}

model Job {
  id        String     @id @default(cuid())
  owner     User       @relation(fields: [ownerId], references: [id])
  ownerId   String
  position  String
  company   String
  location  String?
  status    JobStatus
  type      JobType
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}
